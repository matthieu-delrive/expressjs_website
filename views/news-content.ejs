<div class="container-fluid">
    <div class="row my-3">
            <div class="col-md-12 mb-5">
                <h1 class="text-center"> News</h1>
            </div>
        <% news.forEach(function(result){ %>
            <div class="col-md-12">
                <div class="card flex-md-row mb-4 box-shadow h-md-250">
                    <% var image = result.image.replace("/\\/g", "/");
                        image = image.replace('public', '')%>
                    <img alt='<%= image %>' src='<%= image %>' data-holder-rendered="true" class="" style="width: 700px; height: 400px">
                    <div class="card-body d-flex flex-column align-items-start">
                        <strong class="d-inline-block mb-2 text-primary">        admin  </strong>
                        <h3 class="mb-0">
                            <a class="text-dark" href="news/<%= result._id %>/display"><%= result.title %></a>
                        </h3>
                        <div class="mb-1 text-muted"><%
                                var date = new Date(result.created_at);
                            %> <%= date.toDateString();%></div>
                        <p class="card-text mb-auto">         <%= result.summary %> </p>
                        <a href="news/<%= result._id %>/display">Continue reading</a>
                    </div>

                </div>
            </div>
        <% }); %>
    </div>
</div>